<section class="profile">
  <div class="profile__info">

    <h3 class="display-15">Your Profile</h3>

    <h4 class="form-label"> Email: <%= @parent.email%> <br/><br/>
    Username: <%= @parent.username %> <br/><br/>
    Zipcode: <%= @parent.zipcode.zip_num %> </h4>
<br/><br/>

  <div>
    <h3 class="display-15">Your Ratings</h3>
    <% if @parent.ratings.length == 0 %>
      <p>You have not rated any activities yet</p>
    <% else %>
        <%= button_to "See Your Ratings", ratings_path, method: :get, class: "btn btn-outline-dark"%>
    <% end %>
    <br/>
</div>
 </div>
 <div>
  <%= button_to "Edit Your Profile", edit_parent_path, method: :get, class: "button" %>
</div>
</section>
