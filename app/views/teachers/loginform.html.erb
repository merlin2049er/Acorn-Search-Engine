<h1>Login as a Teacher</h1>

<%= form_tag "/teachers/login", method: "POST", class: 'form' do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <% if flash[:error] %>
    <ul>
        <li class="error"><%= flash[:error] %></li>
    </ul>
  <% end %>

  <br><br>

  <%= submit_tag "Log In" %>

<% end %>