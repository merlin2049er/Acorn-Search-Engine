<h1>Log in</h1>

<%= form_tag login_path do %>
<div class="col-md-6">
    <div class="form-group">
        <label for="">Email:</label>
        <%= text_field_tag :email, nil, class:"form-input", required: true%>
    </div>
    <div class="form-group"><br>
        <label for="">Password:</label>
        <%= password_field_tag :password, nil, class:"form-input", required: true %>
    </div>
        <br><%= submit_tag "Log in", class: "button" %>
</div>
<% end %>


